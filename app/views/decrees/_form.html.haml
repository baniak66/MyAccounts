= form_for ([evidence, decree]), remote: true, html: { class: "form-inline" } do |f|
  - if decree.errors.any?
    #error_explanation
      %h2= "#{pluralize(decree.errors.count, "error")} prohibited this decree from being saved:"
      %ul
        - decree.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.text_field :amount, placeholder: "Amount", class: 'form-control'
  .form-group
    = f.collection_select :account_id, Account.all, :id, :full_name, {}, {class: 'form-control'}
  .form-group
    = radio_button_tag(:decreetype, "DT")
    = label_tag(:type_dt, "DT")
    = radio_button_tag(:decreetype, "CT")
    = label_tag(:type_ct, "CT")

  = f.submit 'Save', class: 'btn btn-default'
